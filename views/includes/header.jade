doctype html
html(lang='en' ng-app='is421')
   head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge')
      meta(name='viewport', content='width=device-width, initial-scale=1')
      // The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags
      base(href='/')
      title= title
      // Bootstrap
      link(href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.5/cerulean/bootstrap.min.css", rel="stylesheet" integrity="sha256-obxCG8hWR3FEKvV19p/G6KgEYm1v/u1FnRTS7Bc4Ii8= sha512-8Xs5FuWgtHH1JXye8aQcxVEtLqozJQAu8nhPymuRqeEslT6nJ2OgEYeS3cKiXasOVxYPN80DDoOTKWgOafU1LQ==" crossorigin="anonymous")
      link(rel='stylesheet', href='assets/stylesheets/styles.css')
      link(rel='stylesheet', href='http://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css')
      // HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
      // WARNING: Respond.js doesn't work if you view the page via file://
      //if lt IE 9
        script(src='https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js')
        script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
   body(ng-controller='NavCtrl' ng-cloak)
      .container
         // Static navbar
         nav.navbar.navbar-default( role="navigation" )
            .navbar-header
               button.navbar-toggle.collapsed( type="button", data-toggle="collapse", data-target="#navbar-inverse", aria-expanded="false", aria-controls="navbar")
                  span.sr-only Toggle navigation
                  span.icon-bar
                  span.icon-bar
                  span.icon-bar
               if authenticated
                  a.navbar-brand(href='/dashboard') Our Project
               else
                  a.navbar-brand(href='/') Awesome App
            #navbar-inverse.collapse.navbar-collapse
               ul.nav.navbar-nav.navbar-right
                  if authenticated
                     li
                        a(href='/dashboard')
                           i.fa.fa-dashboard
                           | &nbsp;Dashboard
                     if isAdmin
                        li: a(href='/manageusers')
                            i.fa.fa-user-md
                            | &nbsp;Manage Users
                        li: a(href='/admin')
                            i.fa.fa-cog
                            | &nbsp;Admin
                     li: a(href='/profile')
                           i.fa.i.fa.fa-user-md
                           | &nbsp;Profile
                     li: a(href='/' ng-click='logout()')
                           i.fa.fa-sign-out
                           | &nbsp;Log Out
                  else
                     li: a(href='/login')
                         i.fa.fa-sign-in
                         | &nbsp;Sign in
                     li: a(href='/signup')
                         i.fa.fa-rocket
                         | &nbsp;Sign up
               // /.nav-collapse
            // /.container-fluid
         ng-view
